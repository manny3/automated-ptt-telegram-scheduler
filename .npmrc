# npm configuration for consistent dependency installation
# This file ensures the same npm behavior in local and CI environments

# Use legacy peer deps to handle React 19 compatibility issues
legacy-peer-deps=true

# Set audit level to moderate to avoid blocking on minor issues
audit-level=moderate

# Disable funding messages to reduce noise
fund=false

# Set registry (use default npm registry)
registry=https://registry.npmjs.org/

# Enable package-lock for consistent installs
package-lock=true

# Set save-exact to false to allow compatible version ranges
save-exact=false

# Set engine-strict to false to allow minor engine version mismatches
engine-strict=false